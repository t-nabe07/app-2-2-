<div class='container'>
  <div class='col-md-12'>
  	<h1>Follow Users</h1>
  	 <% if @users.exists? %>
       <table class='table table-hover table-inverse'>
         <thead>
           <tr>
             <th>image</th>
             <th>name</th>
             <th colspan="1"></th>
             <th colspan="1"></th>
             <th colspan="1"></th>
           </tr>
         </thead>
         <tbody>
          <% @users.each do |user| %>
           <tr>
             <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
             <td><%= user.name %></td>
             <td>フォロー数: <%= user.followings.count %></td>
             <td>フォロワー数: <%= user.followers.count %></td>
             <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
           </tr>
          <% end %>
         </tbody>
       </table>
    <% else %>
      <table class='table table-hover table-inverse'>ユーザーはいません</table>
    <% end %>
  </div>
</div>
