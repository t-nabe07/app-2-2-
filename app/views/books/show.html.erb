<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag(@book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          <% if @user.id == current_user.id %>
          <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
          <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>
          <td id="favorite_buttons_<%= @book.id %>">
            <%= render "favorites/favorite",book: @book %>
          </td>
          <td>コメント数:<%= @book.book_comments.count %></td>
        </tr>

        <% @book.book_comments.each do |book_comment| %>
        <tr>
          <td>
          <%= link_to user_path(book_comment.user) do %>
          <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %><br>
          <%= book_comment.user.name %>
          <% end %>
          </td>
          <td><%= book_comment.comment %></td>
          <% if book_comment.user == current_user %>
          <td><%= link_to "Destroy",book_book_comment_path(book_comment.book,book_comment), method: :delete, class: "btn btn-sm btn-danger" %></td>
          <% end %>
        </tr>
        <% end %>

        <tr>
          <td colspan="7" >
            <div>
              <%= form_with(model:[@book,@book_comment],local: true) do |f| %>
                <%= f.text_area :comment,size:"60x5",placeholder:"コメントをここに" %>
                <br><%= f.submit "送信" %>
              <% end %>
            </div>
          </td>
        </tr>

      </table>
    </div>
  </div>
</div>

